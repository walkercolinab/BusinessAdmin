            @Html.DisplayFor(modelItem => item.FechaPago)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EsActivo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Usuario.Nombres)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TipoGasto.Nombre)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.PagoID }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.PagoID }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.PagoID })
