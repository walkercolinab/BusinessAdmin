@model BusinessAdmin.WebApp.Models.Producto

@{
    ViewBag.Title = "Eliminar Producto";
}

<div class="box">
    <br />
    <h4 class="paddingLeft15">Esta seguro de eliminar el producto?</h4>
    <br />
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="form-errors">
            @Html.ValidationSummary(false, "Resumen de Errores: ", new { @class = "input-error" })
        </div>
    }
    <dl class="dl-horizontal">
        <dt class="form-detail">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt class="form-detail">
            @Html.DisplayNameFor(model => model.PrecioCompra)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PrecioCompra)
        </dd>

        <dt class="form-detail">
            @Html.DisplayNameFor(model => model.PrecioVenta)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PrecioVenta)
        </dd>

        <dt class="form-detail">
            @Html.DisplayNameFor(model => model.Stock)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Stock)
        </dd>

        <dt class="form-detail hide">
            @Html.DisplayNameFor(model => model.EsActivo)
        </dt>

        <dd class="hide">
            @Html.DisplayFor(model => model.EsActivo)
        </dd>

        <dt class="form-detail">
            @Html.DisplayNameFor(model => model.Sucursal.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sucursal.Nombre)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-info" /> |
            @Html.ActionLink("Volver a Lista de Productos", "Index")
        </div>
    }
    <br />
</div>
