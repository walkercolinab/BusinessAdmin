@model IEnumerable<BusinessAdmin.WebApp.Models.CobroProducto>

@{
    ViewBag.Title = "Lista de productos cobrados";
}

<h2>Lista de productos cobrados</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Monto)
        </th>
