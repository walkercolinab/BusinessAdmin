            @Html.DisplayFor(modelItem => item.Usuario.Nombres)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Producto.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Peluquero.Nombres)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.CobroProductoID }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.CobroProductoID }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.CobroProductoID })
        </td>
    </tr>
