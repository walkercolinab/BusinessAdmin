            @Html.DisplayFor(modelItem => item.Ingreso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cambio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaCobro)
        </td>
