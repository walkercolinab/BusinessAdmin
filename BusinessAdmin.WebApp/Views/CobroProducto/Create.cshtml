            @Html.LabelFor(model => model.PeluqueroID, "PeluqueroID", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("PeluqueroID", String.Empty)
                @Html.ValidationMessageFor(model => model.PeluqueroID)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver a Lista de productos cobrados", "Index")
</div>
